<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#48b775">

        <TextView
            android:id="@+id/download_title"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="下载完成"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/downloads_brank_btn"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:src="@drawable/back_jiantou_btn" />

        <TextView
            android:id="@+id/bianji"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="编辑" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <RadioGroup
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#88ada6" >

            <RadioButton
                android:id="@+id/download_finsh"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/download_btn"
                android:button="@null"
                android:checked="true"
                android:drawableLeft="@drawable/management_history"
                android:padding="10dp" />

            <RadioButton
                android:id="@+id/download_loading"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/download_btn"
                android:button="@null"
                android:drawableLeft="@drawable/management_download"
                android:padding="10dp" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="12"
            android:background="#ffffff">

            <TextView
                android:id="@+id/download_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="没有已下载信息" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>