<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#48b775"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/menu_icon_image"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游客"
            android:textColor="#ffffff"
            android:textSize="20sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/menu_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/menu_account_regist"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:text="登陆注册"
        android:textColor="#48b775"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#ff909090"></View>

    <TextView
        android:id="@+id/menu_set"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/menu_personal_set"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:text="应用设置"
        android:textColor="#48b775"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#ff909090"></View>


    <TextView
        android:id="@+id/menu_download"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/menu_download"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:text="下载管理"
        android:textColor="#48b775"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#ff909090"></View>


    <TextView
        android:id="@+id/menu_feedback"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/menu_recommend"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:text="意见反馈"
        android:textColor="#48b775"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#ff909090"></View>


</LinearLayout>