<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="15dp" >

    <ImageView
        android:id="@+id/recent_img"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:src="@drawable/frontcover" />

    <TextView
        android:id="@+id/recent_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/recent_img"
        android:padding="10dp"
        android:text="标题" />

    <TextView
        android:id="@+id/recent_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recent_title"
        android:layout_toRightOf="@+id/recent_img"
        android:padding="10dp"
        android:text="作者" />

    <TextView
        android:id="@+id/recent_pop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recent_author"
        android:layout_toRightOf="@+id/recent_img"
        android:padding="10dp"
        android:text="人气" />

</RelativeLayout>