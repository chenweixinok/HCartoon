<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/iv_ranking_header"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:background="@drawable/recommend_image_load" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_toRightOf="@+id/iv_ranking_header"
        android:padding="10dp" >

        <TextView
            android:id="@+id/tv_ranking_head_cname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无数据" />

        <TextView
            android:id="@+id/tv_head_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_ranking_head_cname"
            android:paddingTop="8dp"
            android:text="作者 :"
            android:textColor="#FF8C8C8C" />

        <TextView
            android:id="@+id/tv_ranking_head_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_ranking_head_cname"
            android:layout_toRightOf="@+id/tv_head_author_name"
            android:paddingLeft="5dp"
            android:paddingTop="8dp"
            android:text="暂无数据"
            android:textColor="#FF8C8C8C" />

        <TextView
            android:id="@+id/tv_head_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_ranking_head_author_name"
            android:ellipsize="end"
            android:maxLines="3"
            android:paddingTop="8dp"
            android:text="简介 :暂无数据"
            android:textColor="#FF8C8C8C" />
    </RelativeLayout>

</RelativeLayout>